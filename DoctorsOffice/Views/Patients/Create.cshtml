@model DoctorsOffice.Models.Patient

<h4>Add a new patient</h4>

<p>@Html.ValidationMessageFor(model => model.Name, "", new {@class="text-danger", @style="font-weight: 600;"})</p>
<p>@Html.ValidationMessageFor(model => model.Birthday, "", new {@class="text-danger", @style="font-weight: 600;"})</p>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <br>
  @Html.LabelFor(model => model.Birthday)
  @Html.EditorFor(model => model.Birthday)
  <br>

  
  <input type="submit" value="Add new patient" class="btn btn-default" />
}

<p>@Html.ActionLink("Home", "Index", "Home")</p>